<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_bersihkudigital"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_bersihkudigital"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bank_sampah"
        tools:targetApi="31">
        <activity
            android:name=".activity.MasterKategoriActivity"
            android:exported="false" />
        <activity
            android:name=".activity.QRCodeScannerActivity"
            android:exported="false"
            android:screenOrientation="sensorPortrait"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden"
            tools:replace="android:screenOrientation" />
        <activity
            android:name=".activity.HistoryReedemActivity"
            android:exported="false" />
        <activity
            android:name=".activity.KategoriAddOrUpdateActivity"
            android:exported="false" />
        <activity
            android:name=".activity.UpdateDataMemberActivity"
            android:exported="false" />
        <activity
            android:name=".activity.TransactionMenuActivity"
            android:exported="false" />
        <activity
            android:name=".activity.HomeAdminActivity"
            android:exported="false" />
        <activity
            android:name=".activity.DashboardMemberActivity"
            android:exported="false" /> <!-- android:name=".MainActivity" -->
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- android:name=".SplashActivity" -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />

</manifest>